<!-- roadmap.ejs -->
<!DOCTYPE html>
<html>
  <head>
    <title>Roadmaps</title>
    <link
      rel="stylesheet"
      href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css"
    />
    <style>
      /* Your custom styles here */

      body {
        background-color: #030329; /* Dark blue background color */
        color: #dad7d7; /* White text color */
      }

      .container h1 {
        color: #b6b6b6 !important; /* Grey text color for h1 */
      }

      .navbar {
        background-color: #212144 !important; /* Dark blue background color for the navbar */
      }

      .navbar-brand,
      .navbar-nav .nav-link {
        color: #dad7d7 !important; /* White text color for navbar items */
      }

      .navbar-brand:hover,
      .navbar-nav .nav-link:hover {
        color: #b6b6b6 !important; /* Grey text color for navbar items on hover */
      }

      .card {
        background-color: #16213e !important; /* Dark navy blue background color for cards */
        border-color: #1a1a2e !important; /* Dark blue border color for cards */
      }

      .card-title,
      .card-text {
        color: #dad7d7 !important; /* White text color for card titles and text */
      }

      .container {
        margin-top: 20px;
      }

      .card {
        margin-bottom: 20px;
      }

      .card-img-top {
        max-height: 200px;
        object-fit: cover;
      }

      /* Add big gap between rows */
      .row-gap {
        margin-top: 30px;
      }
    </style>
  </head>
  <body>
    <!-- Navigation bar -->
    <nav class="navbar navbar-expand-lg navbar-dark">
      <div class="container">
        <a class="navbar-brand" href="#">Mentorship Program</a>
        <button
          class="navbar-toggler"
          type="button"
          data-toggle="collapse"
          data-target="#navbarNav"
          aria-controls="navbarNav"
          aria-expanded="false"
          aria-label="Toggle navigation"
        >
          <span class="navbar-toggler-icon"></span>
        </button>
        <div
          class="collapse navbar-collapse justify-content-center"
          id="navbarNav"
        >
          <!-- Center the navbar items -->
          <ul class="navbar-nav">
            <li class="nav-item active">
              <a class="nav-link" href="#"
                >Home <span class="sr-only">(current)</span></a
              >
            </li>
            <li class="nav-item">
              <a class="nav-link" href="#">About</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="#">Contact</a>
            </li>
          </ul>
        </div>
        <form class="form-inline">
          <div class="input-group">
            <input
              type="text"
              class="form-control"
              placeholder="Search"
              aria-label="Search"
            />
            <div class="input-group-append">
              <button class="btn btn-outline-light" type="button">
                Search
              </button>
            </div>
          </div>
        </form>
      </div>
    </nav>

    <div class="container">
      <h1 class="mb-4">Roadmaps</h1>
      <div class="row">
        <!-- Frontend Roadmap - Text on the Left, Image on the Right -->
        <div class="col-md-6">
          <div class="card">
            <div class="card-body">
              <h5 class="card-title">Frontend Roadmap</h5>
              <p class="card-text">
                <!-- Add Frontend Roadmap content here -->
                <%= roadmapsData[0].content %>
              </p>
            </div>
          </div>
        </div>
        <div class="col-md-6">
          <img
            src="<%= roadmapsData[0].image %>"
            class="card-img-top"
            alt="Frontend Roadmap Image"
          />
          <br /><br />
        </div>

        <!-- Backend Roadmap - Image on the Left, Text on the Right -->
        <div class="col-md-6">
          <img
            src="<%= roadmapsData[1].image %>"
            class="card-img-top"
            alt="Backend Roadmap Image"
          />
        </div>
        <div class="col-md-6">
          <div class="card">
            <div class="card-body">
              <h5 class="card-title">Backend Roadmap</h5>
              <p class="card-text">
                <!-- Add Backend Roadmap content here -->
                <%= roadmapsData[1].content %>
              </p>
            </div>
          </div>
        </div>
      </div>

      <!-- Second Row with Alternated Positions -->
      <div class="row row-gap">
        <!-- AI/ML Roadmap - Text on the Left, Image on the Right -->
        <div class="col-md-6">
          <div class="card">
            <div class="card-body">
              <h5 class="card-title">AI/ML Roadmap</h5>
              <p class="card-text">
                <!-- Add AI/ML Roadmap content here -->
                <%= roadmapsData[2].content %>
              </p>
            </div>
          </div>
        </div>
        <div class="col-md-6">
          <img
            src="<%= roadmapsData[2].image %>"
            class="card-img-top"
            alt="AI/ML Roadmap Image"
          />
        </div>

        <!-- SQA Roadmap - Image on the Left, Text on the Right -->
        <div class="col-md-6">
          <img
            src="<%= roadmapsData[3].image %>"
            class="card-img-top"
            alt="SQA Roadmap Image"
          />
        </div>
        <div class="col-md-6">
          <div class="card">
            <div class="card-body">
              <h5 class="card-title">SQA Roadmap</h5>
              <p class="card-text">
                <!-- Add SQA Roadmap content here -->
                <%= roadmapsData[3].content %>
              </p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </body>
</html>
