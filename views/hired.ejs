<!-- hired.ejs -->
<!DOCTYPE html>
<html>
  <head>
    <title>Hired Employees</title>
    <link
      rel="stylesheet"
      href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css"
    />
    <style>
      body {
        background-color: #030329; /* Dark blue background color */
        color: #dad7d7; /* White text color */
      }

      .container h1 {
        color: #b6b6b6 !important; /* Grey text color for h1 */
      }

      .navbar {
        background-color: #212144 !important; /* Dark blue background color for the navbar */
      }

      .navbar-brand,
      .navbar-nav .nav-link {
        color: #dad7d7 !important; /* White text color for navbar items */
      }

      .navbar-brand:hover,
      .navbar-nav .nav-link:hover {
        color: #b6b6b6 !important; /* Grey text color for navbar items on hover */
      }

      .card {
        background-color: #16213e !important; /* Dark navy blue background color for cards */
        border-color: #1a1a2e !important; /* Dark blue border color for cards */
      }

      .card-title,
      .card-text {
        color: #dad7d7 !important; /* White text color for card titles and text */
      }
    </style>
  </head>
  <body>
    <!-- Navigation bar -->
    <nav class="navbar navbar-expand-lg navbar-dark">
      <div class="container">
        <a class="navbar-brand" href="#">Mentorship Program</a>
        <button
          class="navbar-toggler"
          type="button"
          data-toggle="collapse"
          data-target="#navbarNav"
          aria-controls="navbarNav"
          aria-expanded="false"
          aria-label="Toggle navigation"
        >
          <span class="navbar-toggler-icon"></span>
        </button>
        <div
          class="collapse navbar-collapse justify-content-center"
          id="navbarNav"
        >
          <!-- Center the navbar items -->
          <ul class="navbar-nav">
            <li class="nav-item active">
              <a class="nav-link" href="#"
                >Home <span class="sr-only">(current)</span></a
              >
            </li>
            <li class="nav-item">
              <a class="nav-link" href="#">About</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="#">Contact</a>
            </li>
          </ul>
        </div>
        <form class="form-inline">
          <div class="input-group">
            <input
              type="text"
              class="form-control"
              placeholder="Search"
              aria-label="Search"
            />
            <div class="input-group-append">
              <button class="btn btn-outline-light" type="button">
                Search
              </button>
            </div>
          </div>
        </form>
      </div>
    </nav>

    <div class="container">
      <h1 class="mb-4">Hired Employees</h1>
      <div class="row">
        <% employees.forEach(employee => { %>
        <div class="col-md-6">
          <div class="card">
            <img
              src="https://images.pexels.com/photos/7533317/pexels-photo-7533317.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=1"
              class="card-img-top"
              alt="Employee Image"
            />
            <div class="card-body">
              <h3 class="card-title"><%= employee.name %></h3>
              <h5 class="card-title"><%= employee.workplace %></h5>
              <p class="card-text"><%= employee.interview_experience %></p>
            </div>
          </div>
        </div>
        <% }); %>
      </div>
    </div>
  </body>
</html>
